# Ambient Weather API Credentials (REQUIRED)
# Get these from https://ambientweather.net/account
APPLICATION_KEY=your_application_key_here
API_KEY=your_api_key_here

# Polling Configuration (OPTIONAL)
# How often to fetch data from the API (in minutes)
# Default: 5 minutes
# Minimum: 1 minute (API rate limit: 1 request/second per API key)
POLL_INTERVAL_MINUTES=1

# HTTP Server Configuration (OPTIONAL)
# Port for the JSON feed API
# Default: 3000
HTTP_PORT=3000

# Device Location Override (OPTIONAL)
# Human-readable location that will replace the device location in API responses
# Leave empty to use the device's configured location from Ambient Weather
# Example: Verona, WI, USA
DEVICE_LOCATION=

# PostgreSQL Configuration (OPTIONAL)
# These are used internally within the container
# Default values work fine for most use cases
POSTGRES_DB=ambient_weather
POSTGRES_USER=ambient
POSTGRES_PASSWORD=changeme_secure_password
